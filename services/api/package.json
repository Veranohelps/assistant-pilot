{
  "name": "dersu-api",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "start": "nodemon src/index.ts",
    "start:production": "npm run pm2-setup && pm2 start ./build/index.js --name \"dersu-api\" && pm2 logs \"dersu-api\"",
    "build:production": "tsc --project .",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "pm2-setup": "pm2 set pm2-logrotate:max_size 10K && pm2 set pm2-logrotate:rotateInterval '*/1 * * * *' && pm2 set pm2-logrotate:retain 2"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "pm2": "^4.5.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
